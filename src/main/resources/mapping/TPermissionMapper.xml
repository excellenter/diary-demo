<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="personal.mapper.TPermissionMapper">
    <resultMap id="BaseResultMap" type="personal.entity.TPermission">
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="type" jdbcType="VARCHAR" property="type"/>
        <result column="remark" jdbcType="VARCHAR" property="remark"/>
    </resultMap>
    <sql id="Base_Column_List">
        id, name, type, remark
    </sql>

    <insert id="insert" parameterType="personal.entity.TPermission">
        insert into base_permission
        <trim prefix="(" suffix=")" suffixOverrides=",">
            id,
            name,
            type,
            <if test="remark != null">
                remark,
            </if>
        </trim>
        <trim prefix="select " suffix=" from dual" suffixOverrides=",">
            #{id,jdbcType=BIGINT},
            #{name,jdbcType=VARCHAR},
            #{type,jdbcType=VARCHAR},
            <if test="remark != null">
                #{remark,jdbcType=VARCHAR},
            </if>
        </trim>
        <!-- id 不允许重复 -->
        where (select count(*) from base_permission where id = #{id,jdbcType=BIGINT})=0
    </insert>

    <delete id="deleteBatchInId">
        delete from base_permission where id in (
        <foreach collection="ids" item="id" index="index" separator=",">
            #{id}
        </foreach>)
    </delete>

    <delete id="deleteInId">
        delete from base_permission where id = #{id}
    </delete>

    <update id="update" parameterType="personal.entity.TPermission">
        update base_permission
        <set>
            <if test="name != null">
                name = #{name,jdbcType=VARCHAR}
            </if>
            <if test="type != null">
                type = #{type,jdbcType=VARCHAR}
            </if>
            <if test="remark != null">
                remark = #{remark,jdbcType=VARCHAR}
            </if>
        </set>
        where id = #{id,jdbcType=BIGINT}
    </update>

    <select id="getInId" resultType="personal.entity.TPermission">
        select
        <include refid="Base_Column_List"/>
        from base_permission where id = #{id}
    </select>

    <select id="listInIds" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from base_permission where id in (
        <foreach collection="ids" item="id" index="index" separator=",">
            #{id}
        </foreach>)
    </select>

    <select id="list" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from base_permission
    </select>
</mapper>