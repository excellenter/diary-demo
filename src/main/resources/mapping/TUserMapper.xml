<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="personal.mapper.TUserMapper">

    <resultMap id="BaseResultMap" type="personal.entity.TUser">
        <id column="id" jdbcType="VARCHAR" property="id"/>
        <result column="username" jdbcType="VARCHAR" property="username"/>
        <result column="password" jdbcType="VARCHAR" property="password"/>
        <result column="nickname" jdbcType="VARCHAR" property="nickname"/>
        <result column="email" jdbcType="VARCHAR" property="email"/>
        <result column="tel" jdbcType="VARCHAR" property="tel"/>
        <result column="gender" jdbcType="INTEGER" property="gender"/>
        <result column="qq" jdbcType="VARCHAR" property="qq"/>
        <result column="wechat" jdbcType="VARCHAR" property="wechat"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="login_ip" jdbcType="VARCHAR" property="loginIp"/>
        <result column="login_status" jdbcType="INTEGER" property="loginStatus"/>
        <result column="status" jdbcType="INTEGER" property="status"/>
        <result column="token" jdbcType="VARCHAR" property="token"/>
        <result column="address" jdbcType="VARCHAR" property="address"/>
        <result column="remark" jdbcType="VARCHAR" property="remark"/>
        <result column="birth" jdbcType="TIMESTAMP" property="birth"/>
        <result column="login_time" jdbcType="TIMESTAMP" property="loginTime"/>
        <result column="image" jdbcType="VARCHAR" property="image"/>
    </resultMap>

    <sql id="Base_Column_List">
    id, username, password, nickname, email, tel, gender, qq, wechat, create_time, login_ip, 
    login_status, status, token, address, remark, birth, login_time, image
    </sql>

    <insert id="insert" parameterType="personal.entity.TUser">
        insert into base_user
        <trim prefix="(" suffix=")" suffixOverrides=",">
            id,
            <if test="username != null">
                username,
            </if>
            password,
            <if test="nickname != null">
                nickname,
            </if>
            <if test="email != null">
                email,
            </if>
            <if test="tel != null">
                tel,
            </if>
            <if test="gender != null">
                gender,
            </if>
            <if test="qq != null">
                qq,
            </if>
            <if test="wechat != null">
                wechat,
            </if>
            create_time,
            <if test="loginIp != null">
                login_ip,
            </if>
            <if test="loginStatus != null">
                login_status,
            </if>
            status,
            token,
            <if test="address != null">
                address,
            </if>
            <if test="remark != null">
                remark,
            </if>
            <if test="birth != null">
                birth,
            </if>
            <if test="loginTime != null">
                login_time,
            </if>
            <if test="image != null">
                image,
            </if>
        </trim>
        <trim prefix="select " suffix=" from dual" suffixOverrides=",">
            <choose>
                <when test="id == null">unix_timestamp(now()),</when>
                <when test="id != null">#{id,jdbcType=VARCHAR},</when>
            </choose>
            <if test="username != null">
                #{username,jdbcType=VARCHAR},
            </if>
            #{password,jdbcType=VARCHAR},
            <if test="nickname != null">
                #{nickname,jdbcType=VARCHAR},
            </if>
            <if test="email != null">
                #{email,jdbcType=VARCHAR},
            </if>
            <if test="tel != null">
                #{tel,jdbcType=VARCHAR},
            </if>
            <if test="gender != null">
                #{gender,jdbcType=INTEGER},
            </if>
            <if test="qq != null">
                #{qq,jdbcType=VARCHAR},
            </if>
            <if test="wechat != null">
                #{wechat,jdbcType=VARCHAR},
            </if>
            now(),
            <if test="loginIp != null">
                #{loginIp,jdbcType=VARCHAR},
            </if>
            <if test="loginStatus != null">
                #{loginStatus,jdbcType=INTEGER},
            </if>
            1,
            #{token,jdbcType=VARCHAR},
            <if test="address != null">
                #{address,jdbcType=VARCHAR},
            </if>
            <if test="remark != null">
                #{remark,jdbcType=VARCHAR},
            </if>
            <if test="birth != null">
                #{birth,jdbcType=TIMESTAMP},
            </if>
            <if test="loginTime != null">
                #{loginTime,jdbcType=TIMESTAMP},
            </if>
            <if test="image != null">
                #{image,jdbcType=VARCHAR},
            </if>
        </trim>
        where (select count(*) from base_user where
        <!-- id, 手机号码, 邮箱, token不允许重复 -->
        <choose>
            <when test="id == null">id = unix_timestamp(now())</when>
            <when test="id != null">id = #{id,jdbcType=VARCHAR}</when>
        </choose>
        or tel = #{tel,jdbcType=VARCHAR} or email = #{email,jdbcType=VARCHAR} or token = #{token,jdbcType=VARCHAR}
        )=0
    </insert>

    <delete id="deleteBatchInId">
        delete from base_user where id in (
        <foreach collection="ids" item="id" index="index" separator=",">
            #{id}
        </foreach>)
    </delete>

    <delete id="deleteInId">
        delete from base_user where id = #{id}
    </delete>

    <update id="update" parameterType="personal.entity.TUser">
        update base_user
        <set>
            <if test="username != null">
                username = #{username,jdbcType=VARCHAR},
            </if>
            <if test="password != null">
                password = #{password,jdbcType=VARCHAR},
            </if>
            <if test="nickname != null">
                nickname = #{nickname,jdbcType=VARCHAR},
            </if>
            <if test="email != null">
                email = #{email,jdbcType=VARCHAR},
            </if>
            <if test="tel != null">
                tel = #{tel,jdbcType=VARCHAR},
            </if>
            <if test="gender != null">
                gender = #{gender,jdbcType=INTEGER},
            </if>
            <if test="qq != null">
                qq = #{qq,jdbcType=VARCHAR},
            </if>
            <if test="wechat != null">
                wechat = #{wechat,jdbcType=VARCHAR},
            </if>
            <if test="createTime != null">
                create_time = #{createTime,jdbcType=TIMESTAMP},
            </if>
            <if test="loginIp != null">
                login_ip = #{loginIp,jdbcType=VARCHAR},
            </if>
            <if test="loginStatus != null">
                login_status = #{loginStatus,jdbcType=INTEGER},
            </if>
            <if test="status != null">
                status = #{status,jdbcType=INTEGER},
            </if>
            <if test="token != null">
                token = #{token,jdbcType=VARCHAR},
            </if>
            <if test="address != null">
                address = #{address,jdbcType=VARCHAR},
            </if>
            <if test="remark != null">
                remark = #{remark,jdbcType=VARCHAR},
            </if>
            <if test="birth != null">
                birth = #{birth,jdbcType=TIMESTAMP},
            </if>
            <if test="loginTime != null">
                login_time = #{loginTime,jdbcType=TIMESTAMP},
            </if>
            <if test="image != null">
                image = #{image,jdbcType=VARCHAR},
            </if>
        </set>
        where id = #{id,jdbcType=VARCHAR}
    </update>

    <select id="getInId" resultType="personal.entity.TUser">
        select
        <include refid="Base_Column_List"/>
        from base_user where id = #{id}
    </select>

    <select id="listInIds" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from where id in (
        <foreach collection="ids" item="id" index="index" separator=",">
            #{id}
        </foreach>)
    </select>

    <select id="list" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from base_user
    </select>

    <select id="getUserByEmail" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from base_user where
        email = #{email,jdbcType=VARCHAR}
        <if test="password != null">
            and password = #{password,jdbcType=VARCHAR};
        </if>
    </select>

    <select id="getUserByTel" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from base_user where
        email = #{tel,jdbcType=VARCHAR}
        <if test="password != null">
            and password = #{password,jdbcType=VARCHAR};
        </if>
    </select>
</mapper>